# Database Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Configuration
OPENAI_API_KEY=your_openai_api_key
VITE_OPENAI_API_KEY=your_openai_api_key

# OCR Configuration
OCR_SPACE_API_KEY=your_ocr_space_api_key

# Cloud Storage Configuration
CLOUD_STORAGE_PROVIDER=aws-s3
# For AWS S3:
CLOUD_STORAGE_REGION=us-east-1
CLOUD_STORAGE_BUCKET=your-s3-bucket-name
CLOUD_STORAGE_ACCESS_KEY_ID=your-aws-access-key-id
CLOUD_STORAGE_SECRET_ACCESS_KEY=your-aws-secret-access-key

# For Cloudflare R2 (alternative to AWS S3):
# CLOUD_STORAGE_PROVIDER=cloudflare-r2
# CLOUD_STORAGE_REGION=auto
# CLOUD_STORAGE_BUCKET=your-r2-bucket-name
# CLOUD_STORAGE_ACCESS_KEY_ID=your-r2-access-key-id
# CLOUD_STORAGE_SECRET_ACCESS_KEY=your-r2-secret-access-key
# CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# API Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,csv,jpg,jpeg,png,xls,xlsx,txt
